<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_layout"
    tools:context="com.example.h.learn.activity.MainActivity">

    <include  layout="@layout/my_drawer_layout"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <Button
            android:id="@+id/btn_share"
            android:text="@string/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_volley"
            android:text="volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/btn_gson"
            android:text="Gson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_fragment"
            android:text="Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <Button
            android:text="viewPager TabLayout"
            android:id="@+id/btn_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="GreenDao"
            android:id="@+id/btn_green_dao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:text="SlidingPanelLayout"
            android:id="@+id/btn_slide_panel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />


        <Button android:text="WebView"
            android:id="@+id/btn_web_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <Button android:text="Layout"
            android:id="@+id/btn_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

    </LinearLayout>
    
</android.support.v4.widget.DrawerLayout>
